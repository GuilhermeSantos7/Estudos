using System;

using System.Globalization;

namespace curso {
    class Program {
        static void Main(string[] args) {

            int n, hora, resto,minutos, segundos;

            n  = int.Parse(Console.ReadLine());
            hora = n / 3600;
            resto = n % 3600;
            minutos = resto / 60;
            segundos = resto % 60;




            Console.WriteLine(hora + ":" + minutos + ":" + segundos);             

        }

    }

}
